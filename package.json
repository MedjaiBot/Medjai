{
  "name": "medjaibot",
  "version": "0.0.0-development",
  "description": "MedjaiBot is a chatbot for various streaming platforms. It's modular design allows it to be extended by plugins for several Third-party integrations. There is also a server version for streamers who don't have a fast internet connection.",
  "main": "index.js",
  "author": "Yannick Fricke <yannickfricke@googlemail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "commit": "git-cz",
    "test": "jest",
    "test:dev": "jest --watch",
    "lint": "eslint . src/ts/**/*.tsx?",
    "lint:fix": "eslint . --fix src/ts/**/*.tsx?",
    "semantic-release": "semantic-release",
    "prod": "parcel build public/index.html --public-url ./ --target=electron",
    "dev": "node --trace-deprecation devserver.js",
    "electron:dev": "electron src/js/electron.dev.js",
    "electron:prod": "electron src/js/electron.prod.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MedjaiBot/Medjai.git"
  },
  "dependencies": {
    "@types/react-router": "^4.0.24",
    "@types/react-router-dom": "^4.2.6",
    "electron": "^2.0.0",
    "node-sass": "^4.9.0",
    "pre-push": "^0.1.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "semantic-ui-react": "^0.80.0",
    "typescript": "^2.8.3"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.0.0",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "@types/react-test-renderer": "^16.0.1",
    "@types/sequelize": "^4.27.16",
    "@types/sqlite3": "^3.1.3",
    "@types/uuid": "^3.4.3",
    "autoprefixer": "^8.3.0",
    "commitizen": "^2.9.6",
    "css-loader": "^0.28.11",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "jest-jasmine2": "^23.0.0",
    "lerna": "^2.11.0",
    "less-loader": "^4.1.0",
    "postcss-loader": "^0.13.0",
    "precss": "^1.4.0",
    "react-hot-loader": "^4.1.2",
    "react-test-renderer": "^16.3.2",
    "redux": "^4.0.0",
    "sass-loader": "^7.0.1",
    "semantic-release": "^15.1.7",
    "sequelize": "^4.37.6",
    "sqlite3": "^4.0.0",
    "style-loader": "^0.21.0",
    "travis-deploy-once": "^5.0.0",
    "ts-jest": "^22.4.4",
    "ts-loader": "^4.2.0",
    "typescript-eslint-parser": "^15.0.0",
    "typings": "^2.1.1",
    "uuid": "^3.2.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^3.0.0",
    "webpack-dev-server": "^3.1.4",
    "yarn": "^1.6.0"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/scss",
      "<rootDir>/css",
      "<rootDir>/js"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "verbose": true
  },
  "pre-push": [
    "lint",
    "test"
  ],
  "browser": {
    "fs": true
  }
}
