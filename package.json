{
  "name": "medjaibot",
  "version": "0.0.0-development",
  "description": "MedjaiBot is a chatbot for various streaming platforms. It's modular design allows it to be extended by plugins for several Third-party integrations. There is also a server version for streamers who don't have a fast internet connection.",
  "main": "index.js",
  "author": "Yannick Fricke <yannickfricke@googlemail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test:dev": "jest --watch",
    "lint:fix": "eslint . --fix src/**/*.tsx",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MedjaiBot/Medjai.git"
  },
  "dependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.0.0",
    "@types/react": "^16.3.13",
    "@types/react-test-renderer": "^16.0.1",
    "@types/sequelize": "^4.27.16",
    "@types/sqlite3": "^3.1.3",
    "@types/uuid": "^3.4.3",
    "awesome-typescript-loader": "^5.0.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "electron": "^1.8.6",
    "jest": "^22.4.3",
    "node-sass": "^4.9.0",
    "react": "^16.3.2",
    "react-test-renderer": "^16.3.2",
    "redux": "^4.0.0",
    "sass-loader": "^7.0.1",
    "sequelize": "^4.37.6",
    "sqlite3": "^4.0.0",
    "style-loader": "^0.21.0",
    "ts-jest": "^22.4.4",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3",
    "typescript-eslint-parser": "^15.0.0",
    "typescript-loader": "^1.1.3",
    "uuid": "^3.2.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "verbose": true
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "semantic-release": "^15.1.7"
  }
}
